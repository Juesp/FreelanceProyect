{{#if Admin}}
<div class="col-md-15 p-3 mt-0">
<div> 
    <div class="card-header text-center pListTitle">            
        <h1 class="h3 text-white">Usuarios</h1>
    </div>
</div>
  {{#if pList}}
    <table class="table table-light table-bordered table-hover overflow-y: hidden" id="miTabla">
      <thead class="table-secondary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombres</th>
          <th scope="col">Primer apellido</th>
          <th scope="col">Segundo apellido</th>
          <th scope="col">Identificación</th>
          <th scope="col">Correo electrónico</th>
          <th scope="col">Rol</th>
          <th scope="col">Empresa</th>
          <th scope="col">Ver</th>
          <th scope="col">Eliminar</th> 
        </tr>
      </thead>
      <tbody>   
        {{#each pList}} 
          <tr>
            <td>{{name}}</td>
            <td>{{lastname}}</td>
            <td>{{sec_lastname}}</td>
            <td>{{identification}}</td>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>{{company_name}}</td>
            <td>       
              <a href="/users/seeUserAdminForm/{{_id}}"><button class="btn btn-primary btn-block btn-sm">Perfil</button></a>        
            </td>   
            <td>
              <form action="/users/deleteUserAdmin/{{_id}}?_method=DELETE" method="POST">
                <button type="submit" class="btnDelete btn-danger btn-block btn-sm">
                    Eliminar
                  </button> 
              </form>
            </td>
          </tr>
        {{/each}}     
      </tbody>
    </table>
    <script>
        // JavaScript para asignar índices a las filas de la tabla
        document.addEventListener('DOMContentLoaded', function() {
            var tabla = document.getElementById('miTabla');
            var filas = tabla.getElementsByTagName('tr');

            for (var i = 1; i < filas.length; i++) {
                var celdaIndice = document.createElement('td');
                celdaIndice.textContent = i;
                celdaIndice.style.fontWeight = 'bold'; 
                filas[i].insertBefore(celdaIndice, filas[i].firstChild);
            }
        });
    </script>
  {{else}}
    <br>
    <br>
    <br>
    <div>
      <h4>No se encontró ningún usuario.</h4>
    </div>
  {{/if}}
</div>
{{/if}}
