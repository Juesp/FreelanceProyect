{{#if Admin}}
<div class="col-md-8 mx-auto mt-3">
    <div class="card ">
        <div class="card-header text-center">            
            <h1 class="h4 text-white font-weight-bold">Perfil de usuario</h1>
        </div>
        <div class="card-body"> 
                <h5 class="font-weight-bold text-center mt-0 mb-1">Información personal</h5>
                <hr class="mt-0 mb-0">                        
                <div class="form-group row mb-0 mt-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Nombres y apellidos:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.name}} {{user1.lastname}} {{user1.sec_lastname}}</a>    
                    </div>                                         
                </div>  
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Tipo de Identificación:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.identification_type}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Identificación:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.identification}}</a>    
                    </div>                                         
                </div>                

                <h5 class="font-weight-bold text-center mt-0 mb-1">Información general</h5>
                <hr class="mt-0 mb-0 mt-0">
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Fecha de nacimiento:</label>                           
                    </div>                
                    <div>                                                                        
                        <a class="bg-light">{{user1.date_of_bird}}  -  (AAAA/MM/DD)</a> 
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Género:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.gender}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Número de Teléfono:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.mobile_phone}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Rol:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.role}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Email:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.email}}</a>    
                    </div>                                         
                </div> 

                <h5 class="font-weight-bold text-center mt-0 mb-1">Datos de Empresa</h5>
                <hr class="mt-0 mb-0">
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Nombre de Empresa:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.company_name}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">NIT:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.nit}}</a>    
                    </div>                                         
                </div>
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Dirección:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.company_address}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Teléfono:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.company_phone}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Ciudad:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.company_city}}</a>    
                    </div>                                         
                </div> 
                <div class="form-group row mb-0">    
                    <div class="col-md-4">
                        <label class="bg-light font-weight-bold">Departamento:</label>                           
                    </div>                
                    <div >                         
                        <a class="bg-light">{{user1.company_department}}</a>    
                    </div>                                         
                </div>  

                <div class="form-group row justify-content-center mb-0 mt-4">  
                    <div class="col-md-4">
                        <a href="/users/started"><button class="btn btn-primary btn-block">Ir a inicio</button></a>
                    </div>
                    <div class="col-md-4">
                        <a href="/users/editUserFormAdmin/{{user1._id}}"><button class="btn btn-primary btn-block">Editar</button></a>
                    </div> 
                </div>
        </div>
    </div>    
</div>
<br>
{{/if}}
